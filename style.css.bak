/* style.css - Cuide-se Hoje (legível) */

/* Reset básico */
* {
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, sans-serif;
  margin: 0;
  padding: 0;
  color: #333;
  background: #fff;
}

/* ===== CABEÇALHO ===== */
header {
  background-color: #000; /* preto */
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px;
  position: relative;
}

/* botão do menu (ícone) */
.menu-icon {
  font-size: 28px;
  cursor: pointer;
  position: absolute;
  left: 16px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: #fff;
}

/* título/logo textual */
.logo {
  font-size: 22px;
  font-weight: 700;
  text-align: center;
}

/* ===== MENU LATERAL (off-canvas) ===== */
nav#menu {
  height: 100%;
  width: 0;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000; /* combinar com o cabeçalho */
  overflow-x: hidden;
  transition: width 0.35s ease;
  padding-top: 60px;
  z-index: 1000;
}

/* menu aberto (classe que o JS adiciona) */
nav#menu.open {
  width: 250px;
}

nav#menu a {
  padding: 14px 20px;
  text-decoration: none;
  font-size: 18px;
  color: #fff;
  display: block;
  border-bottom: 1px solid rgba(255,255,255,0.02);
}

nav#menu a:hover {
  background: rgba(255,255,255,0.03);
}

.close-btn {
  position: absolute;
  top: 14px;
  right: 18px;
  font-size: 28px;
  cursor: pointer;
  color: #fff;
}

/* ===== LOGO / IMAGEM PRINCIPAL ===== */
.hero {
  text-align: center;
  margin: 20px 0;
}

.hero img {
  width: 100%;
  max-width: 350px; /* controla tamanho em telas grandes */
  height: auto;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.15);
}

/* ===== CONTEÚDO PRINCIPAL ===== */
main {
  padding: 20px;
  text-align: center;
}

main h1 {
  color: #007bff; /* cor de destaque para títulos (pode mudar) */
  font-size: 2em;
  margin: 10px 0 20px;
}

main p {
  line-height: 1.6;
  font-size: 18px;
}

/* ===== BANNER DE COOKIES ===== */
#cookie-banner {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #004aad;
  color: white;
  text-align: center;
  padding: 12px;
  z-index: 999;
  font-size: 15px;
}

#cookie-banner a {
  color: #ffdf00;
  text-decoration: underline;
}

#accept-cookies {
  margin-left: 10px;
  padding: 6px 12px;
  background: #ffdf00;
  color: #004aad;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  font-weight: bold;
}

/* ===== RODAPÉ ===== */
footer {
  background-color: #000;
  color: white;
  text-align: center;
  padding: 15px;
  margin-top: 30px;
}

/* ===== RESPONSIVO ===== */
@media (min-width: 769px) {
  /* em telas maiores mostramos o menu horizontal no topo */
  .menu-icon {
    display: none;
  }

  header {
    justify-content: space-between;
    padding: 12px 20px;
  }

  nav#menu {
    position: static;
    width: auto;
    height: auto;
    display: flex;
    background: transparent;
    padding: 0;
    transition: none;
  }

  nav#menu a {
    border: none;
    color: #fff;
    padding: 0 12px;
  }
}
